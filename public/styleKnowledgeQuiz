  <script>
    const quiz = document.getElementById("quiz");
    const resultsContainer = document.getElementById("results");
    const submitButton = document.getElementById("check-answers");
    resultsContainer.style.display = "none";

    const questions = [
      {
        question: "When was the modern day bra invented?",
        answers: {
          option1: "1913",
          option2: "1923",
          option3: "1933",
        },
        correctAnswer: "option1", /*1913*/
      },
      {
        question: "Who invented the modern bra?",
        answers: {
          option1: "Laura Ingalls Wilder",
          option2: "Mary Phelps Jacob",
          option3: "Sofia Loren",
        },
        correctAnswer: "option2",/*Mary Phelps Jacob*/
      },
      {
        question: "Who is known as the “Father of Haute Couture?",
        answers: {
          option1: "Charles Frederick Worth",
          option2: "Ralph Loren",
          option3: "Versace",
        },
        correctAnswer: "option1",/*Charles Frederick Worth*/
      },
      {
        question: "Who designed the iconic little black dress?",
        answers: {
          option1: "Louis Reard",
          option2: "Goldie Hawn",
          option3: "Coco Chanel",
        },
        correctAnswer: "option3",/*Coco Chanel*/
      },
      {
        question: "What was the tallest high heel shoe ever worn?",
        answers: {
          option1: "8",
          option2: "20",
          option3: "15",
        },
        correctAnswer: "option2",/*20 inches*/
      },
      {
        question: "Who wore the tallest high heel shoe ever worn?",
        answers: {
          option1: "Coco Chanel",
          option2: "Cher",
          option3: "Lady Gaga",
        },
        correctAnswer: "option3",/*Lady Gaga*/
      },
      {
        question: "What is the oldest fashion house still in operation?",
        answers: {
          option1: "Maison Givenchy",
          option2: "Revlon",
          option3: "Chanel",
        },
        correctAnswer: "option1",/*Maison Givenchy*/
      },
      {
        question: "What fashion house is known for its signature red-soled shoes?",
        answers: {
          option1: "Prada",
          option2: "Christian Louboutin",
          option3: "Gucci",
        },
        correctAnswer: "option2",/*Christian Louboutin*/
      },
      {
        question: "What is the name of the largest fashion event in the world?",
        answers: {
          option1: "New York Fashion Week",
          option2: "Milan Fashion Week",
          option3: "Paris Fashion Week",
        },
        correctAnswer: "option1",/*New York Fashion Week*/
      },
      {
        question: "Who was the first model to appear on a postage stamp?",
        answers: {
          option1: "Cindy Crawford",
          option2: "Naomi Campbell",
          option3: "Twiggy",
        },
        correctAnswer: "option3",/*Twiggy*/
      }
    ];

    submitButton.addEventListener("click", showResults);

    function showResults() {
      let numCorrect = 0;

      for (let i = 0; i < questions.length; i++) {
        const question = questions[i];
        const answerContainer = quiz.querySelector(
          `[name=question${i}]:checked`
        );
        if (!answerContainer) {
          alert("Please select an answer for all questions.");
          return;
        }
        const answer = answerContainer.value;
        if (answer === question.correctAnswer) {
          numCorrect++;
        }
      }
      resultsContainer.innerHTML =
        "You got " + numCorrect + " out of " + questions.length + " correct.";
      resultsContainer.style.display = "block";
    }
  </script>
